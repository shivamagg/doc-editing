<p id="notice"><%= notice %></p>
<strong><%= @document.title %></strong>
<br>
<%= @document.text %>
<br>
<%= link_to 'Edit', edit_document_path(@document) %> |
<%= link_to 'Back', documents_path %>

<br><br>
<h3> Edits </h3>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @edits.each do |edit| %>
      <tr>
      	<td><strong>By</strong> <%= edit.user.email %></td>
      	<td><strong>On</strong> <%= edit.updated_at %></td>
        <td><%= link_to 'Show', edit %></td>
      </tr>
    <% end %>
  </tbody>
</table>
