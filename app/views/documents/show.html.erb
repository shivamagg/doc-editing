<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col m12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @document.title %></span>
          <p>
            <%= @document.text %>
          </p>
      </div>
      <div class="card-action">
        <%= link_to 'Edit', edit_document_path(@document) %>

        <% if @document.edits.size > 0%>
          <a class='dropdown-button btn' data-beloworigin="true" data-activates=<%='dropdown_doc_edit'+@document.id.to_s%> >View Edit History</a>

          <ul id=<%='dropdown_doc_edit'+@document.id.to_s%> class='dropdown-content'>
          <% @document.edits.reverse.each do |edit| %>
              <li><%= link_to edit.user.email, edit%></li>
          <% end %>
          </ul>
        <% else %>
          <a class='dropdown-button btn'>No Edit History</a>
        <% end %>
      </div>
    </div>
  </div>
</div>

