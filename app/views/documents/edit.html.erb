<h1>Editing Document</h1>

<div class="row">
	<div class="col s12 m3"></div>
	<%= form_for @document, html: {class: 'col s12 m6'} do |f| %>

		<div class="row">
			<div class="input-field col s12">
	  		<%= f.text_area :text, class: 'materialize-textarea' %><br />
	  	</div>
	  </div>

	  <%= f.submit 'Update Document', class: 'btn' %>
	<% end %>
</div>

