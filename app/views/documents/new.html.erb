<h1>New Document</h1>
<div class="row">
	<div class="col s12 m3"></div>
	<%= form_for @document, html: {class: 'col s12 m6'}  do |f| %>
		<div class="row">
			<div class="input-field col s12">
	  		<%= f.text_field :title, placeholder: 'Title' %><br />
	  	</div>
		</div>

		<div class="row">
			<div class="input-field col s12">
	  		<%= f.text_area :text, class: 'materialize-textarea', placeholder: 'Text' %><br />
	  	</div>
		</div>

	  <%= f.submit 'Create Document', class: 'btn' %>
	<% end %>
</div>
<%= link_to 'Back', documents_path, class: 'btn' %>
